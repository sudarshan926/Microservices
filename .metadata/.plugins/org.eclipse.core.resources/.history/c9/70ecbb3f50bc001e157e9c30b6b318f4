package com.test.service;

import java.util.List;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.test.entity.CustomerDetails;

@FeignClient(url = "http://localhost:8883", value ="CustomerDetails-Client"  )
public interface FignClient {
	
	@GetMapping("/customerdetails/customer/{customerId}")
	List<CustomerDetails>getCustomerOfcustomerDetails(@PathVariable long customerId);
	
}
