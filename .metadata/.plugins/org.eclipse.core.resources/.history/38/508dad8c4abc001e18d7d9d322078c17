package com.test.service;

import java.util.List;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import com.test.entity.Customer;

@FeignClient(url = "http://localhost:8882", value ="Customer-Client"  )
public interface FignClient {
	
	@GetMapping("/customer/customerdetails/{customerId}")
	List<Customer>getCustomerOfcustomerDetails(@PathVariable long customerId);
	
}
